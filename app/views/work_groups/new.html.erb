<div class="header">
  <div class="logo">
    <%= image_tag 'odaiba-logo_inverted_icon.png' %>
  </div>
</div>
<div class="wrapper">
  <div class="form">
  <div class="grey-header">
    <h3>Create a New Work Group</h3>
  </div>
    <% if @notice %>
      <div class="modal fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
          <!--
            Background overlay, show/hide based on modal state.

            Entering: "ease-out duration-300"
              From: "opacity-0"
              To: "opacity-100"
            Leaving: "ease-in duration-200"
              From: "opacity-100"
              To: "opacity-0"
          -->
          <div class="trigger fixed inset-0 transition-opacity">
            <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
          </div>

          <!-- This element is to trick the browser into centering the modal contents. -->
          <span class="hidden sm:inline-block sm:align-middle sm:h-screen"></span>&#8203;
          <!--
            Modal panel, show/hide based on modal state.

            Entering: "ease-out duration-300"
              From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
              To: "opacity-100 translate-y-0 sm:scale-100"
            Leaving: "ease-in duration-200"
              From: "opacity-100 translate-y-0 sm:scale-100"
              To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
          -->
          <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full" role="dialog" aria-modal="true" aria-labelledby="modal-headline">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">

              <div class="sm:flex sm:items-start">
               
                <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                <!-- Title -->
                  <div class="flex justify-between items-center pb-3">
                    <p class="text-xl font-bold">Login Links</p>
                    <div class="modal-close cursor-pointer z-50">
                      <svg class="close-button fill-current text-gray-500" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 18 18">
                        <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="mt-2">
                    <p id="modal-content" class="text-sm leading-5 text-gray-500">
                      <%= @notice %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
              <%# <span class="flex w-full rounded-md shadow-sm sm:ml-3 sm:w-auto">
                <button type="button" class="inline-flex justify-center w-full rounded-md border border-transparent px-4 py-2 bg-red-600 text-base leading-6 font-medium text-white shadow-sm hover:bg-red-500 focus:outline-none focus:border-red-700 focus:shadow-outline-red transition ease-in-out duration-150 sm:text-sm sm:leading-5">
                  Deactivate
                </button>
              </span> %>
              <span class="mt-3 flex w-full rounded-md shadow-sm sm:mt-0 sm:w-auto">
                <button type="button" class="copy-button inline-flex justify-center w-full rounded-md border border-gray-300 px-4 py-2 bg-white text-base leading-6 font-medium text-gray-700 shadow-sm hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue transition ease-in-out duration-150 sm:text-sm sm:leading-5">
                  Copy
                </button>
              </span>
            </div>
          </div>
        </div>
      </div>  
    <% end %>
    <div class="form-text">
      <%= simple_form_for @work_group do |f| %>
        <%= simple_fields_for :no_model_fields do |n| %>
          <h3>Emails</h3>
          <p>Please write emails of session participants. Please separate by a single empty space. After submitting all participants will receive an email with url and password</p>
          <%= n.text_area :emails, value: @emails %>

          <h3>Delivery Method</h3>
          <p>Select if participants will receive email with url, login, and password, or if you want to generate a unique url for each participant (which you can then copy and share via text)</p>
          <%= n.input_field :delivery_method, as: :radio_buttons, collection: ['send email', 'generate links'], value: @delivery_method %>

          <h3>Worksheet URL</h3>
          <p>Paste image url of an online worksheet, or click of one of the options below</p>
          <%= n.input_field :worksheet_url, value: @urls %>
          <div class="img-container">
            <% @worksheet_urls.each do |url| %>
              <li>
                <%= image_tag(url, class: "worksheet-img", style: 'max-width:300px;') %>
              </li>
            <% end %>
          </div>
        <% end %>

        <h3>Start at</h3>
          <div class="start-fields">
            <%= simple_fields_for :no_model_fields do |n| %>
              <%= n.date_field :start_date, value: @sart_date, class: "start-date" %>
              <%= n.time_field :start_time, value: @start_time, class: "start-time", placeholder: "12:00" %>
            <% end %>
          </div>
        <h3>Turn Time</h3>
        <p>Length of turn for single participant in minutes</p>
        <%= f.input_field :turn_time %>
        <div class="disclaimer">
          <h3>Disclaimer:</h3>
          <p>Please read this disclaimer before creating a work group. The odaiba app and <a href="https://www.odaiba-app.com/">https://www.odaiba-app.com/</a> are owned and operated by odaiba ("us", "we", "our").
          <br/>We are currently in pre-alpha stage, and all the information posted on here is published in good faith and meant for informational or demonstration purposes. We cannot guarantee the information or application will be free of errors.
          <br/>We reserve the right to change this policy at any time. Please visit our website (above) in order to keep up to date with the latest changes.
          </p>
          <h3>Technical Requirements:</h3>
          <p>Currently our app only supports Google Chrome, and can only be used on a laptop or desktop computer. It is not intended for mobile usage at this time. Please contact <a href="mailto:infoodaiba@gmail.com">infoodaiba@gmail.com</a> if you have any questions or comments.</p>
        </div>
        <div class="submit-container">
          <%= f.submit "Create Work Group", id: "form-submit"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
