<div class="container">
  <div class="card">
    <div class="header">
      <div class="image">
        <%= image_tag(attachments['odaiba-logo.png'].url, height:'48px') %>
      </div>
    </div>
    <div class="card-text">
      <h2>You've been invited!</h2>
      <hr>
      <p>Dear <%= @user.name %>,</p>
      <p>
        You have been invited to collaborate on a worksheet.<br/>
        You can access it by clicking here:
      </p>
      <%= @session_url %>
      <br/>
      <p>Sincerely,</p>
      <p>The odaiba team</p>
    </div>
  </div>
  <div class="footer">
    <p>
      Learn more at <a class="link" href="https://www.odaiba-app.com/">www.odaiba-app.com</a><br/>
      Or contact us at <a class="link" href="mailto: infoodaiba@gmail.com">infoodaiba@gmail.com</a>
    </p>
  </div>
</div>
